<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.winersapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/WineTheme" >
        <activity
            android:name="com.example.winersapp.Activities.WinersAppMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.winersapp.Activities.MainActivity"
            android:label="@string/find_wines"
            android:parentActivityName="com.example.winersapp.Activities.WinersAppMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.winersapp.Activity.WinersAppMainActivity" />
        </activity>          
        <activity
            android:name="com.example.winersapp.WineOfDay"
            android:label="@string/title_activity_wine_of_day"
            android:parentActivityName="com.example.winersapp.Activities.WinersAppMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.winersapp.Activity.WinersAppMainActivity" />
        </activity> 
        <activity
            android:name="com.example.winersapp.WineSearch"
            android:label="@string/find_wines"
            android:parentActivityName="com.example.winersapp.Activities.WinersAppMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.winersapp.Activity.WinersAppMainActivity" />
        </activity>         
    </application>

</manifest>