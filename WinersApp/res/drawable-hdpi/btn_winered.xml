<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#7a002e"
                android:endColor="#9b003e"
                android:angle="270" />            
            <stroke
                android:width="1dp"
                android:color="#680026" />
            <padding
                android:left="15dp"
                android:top="10dp"
                android:right="15dp"
                android:bottom="10dp" />            
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#9b003e"
                android:endColor="#7a002e"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#7a002e" />
            <padding
                android:left="15dp"
                android:top="10dp"
                android:right="15dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>