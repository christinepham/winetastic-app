<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".WinersAppMainActivity" >
 
    <!-- Goes directly to the browse/search page -->
    <Button
        android:id="@+id/guest_find_wines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/winered"
        android:fontFamily="sans-serif-condensed"
        android:height="100dp"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold" 
        android:gravity="center" 
        
        android:text="@string/find_wines"        />   
        
    <!-- Convenient buttons -->
   <Button
       android:id="@+id/guest_home_button"
       android:layout_width="200dp"
       android:layout_height="50dp"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:layout_marginTop="50dp"
       android:background="@color/winered"
       android:fontFamily="sans-serif-condensed"
       android:textStyle="bold"       
       android:textColor="@color/white"       
       android:gravity="center"
       android:textSize="20sp" 

       android:text="@string/guest_goto_home"       
       android:onClick="gotoHome"       />
   
   <Button
       android:id="@+id/guest_login_button"
       android:layout_below="@+id/guest_home_button"       
       android:layout_width="200dp"
       android:layout_height="50dp"
       android:layout_marginTop="10dp"
       android:background="@color/winered"
       android:fontFamily="sans-serif-condensed"
       android:gravity="center"
       android:textColor="@color/white"
       android:textSize="20sp"
       android:textStyle="bold"
       
       android:text="@string/login"       
       android:onClick="showLogin"       />   
   

</RelativeLayout>